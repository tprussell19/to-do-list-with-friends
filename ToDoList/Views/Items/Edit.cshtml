@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<h2>Edit</h2>

<h4>Edit this task: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ItemId)

  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  @Html.Label("Select category")
  @Html.DropDownList("CategoryId")

  @Html.LabelFor(model => model.DateDue)
  @Html.EditorFor(model => model.DateDue)

  @Html.LabelFor(model => model.IsCompleted)
  @Html.CheckBoxFor(model => model.IsCompleted)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>